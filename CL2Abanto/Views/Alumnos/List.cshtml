@model CL2Abanto.Models.AlumnosListResponse

<h1>Mantenimiento de Alumnos</h1>
<a asp-action="Add" asp-controller="Alumno" class="btn btn-primary">Agregar Alumno</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Notas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alumno in Model.List)
        {
            <tr>
                <td>@alumno.IdAlumno</td>
                <td>@alumno.Nombre</td>
                <td>@alumno.Apellido</td>
                <td>@alumno.DNI</td>
                <td>
                    <ul>
                        @foreach (var nota in alumno.Notas)
                        {
                            <li>@nota.NombreCurso: @nota.Nota</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
